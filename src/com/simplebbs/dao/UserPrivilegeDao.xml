<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simplebbs.dao.UserPrivilegeDao">
    <!-- 目的：为DAO接口方法提供sql语句配置 -->
    <!-- 根据用户ID查询用户的权限 -->
    <select id="FindUserPrivilege" parameterType="int" resultType="UserPrivilege">
        select * from user_priv where user_id = #{user_id};
    </select>

    <!-- 根据用户ID修改用户权限 -->
    <update id="UpdateUserPrivilege" parameterType="int">
        update user_priv set able_post = #{canpost} where user_id = #{user_id};
        update user_priv set able_comment = #{cancomment} where user_id = #{user_id};
        update user_priv set admin = #{admin} where user_id = #{user_id}
    </update>
</mapper>